{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "target": "ES2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "strict": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "outDir": "lib",
        "sourceMap": true,
        "lib": ["ES2022"],
        "declaration": true,
        "pretty": true
    },
    "files": ["src/index.ts"],
    "include": ["typings/**/*", "src/**/*"]
}
